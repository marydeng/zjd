<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color">

    <LinearLayout
        android:id="@+id/home_product_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:background="@color/white"
            android:id="@+id/home_grid_img"
            android:layout_width="@dimen/x215"
            android:layout_height="@dimen/x215"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/home_grid_name"
            android:layout_width="@dimen/x215"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/x18"
            android:textSize="@dimen/x24"
            android:maxLines="2"
            android:maxEms="8"
            android:text="哇哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
            android:textColor="@color/gray_333333" />

        <TextView
            android:id="@+id/home_grid_price"
            android:layout_width="@dimen/x215"
            android:layout_height="@dimen/x40"
            android:gravity="top|center"
            android:layout_marginBottom="@dimen/x18"
            android:textSize="@dimen/x24"
            android:text="￥ 99"
            android:textColor="@color/price_red" />

    </LinearLayout>

</RelativeLayout>