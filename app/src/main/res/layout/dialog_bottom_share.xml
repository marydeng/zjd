<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x340"
    android:orientation="vertical"
    android:background="@drawable/shape_white_solid">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="@dimen/x60"
             android:text="分享到"
             android:gravity="center"
             android:textColor="@color/gray_999999"
             android:textSize="@dimen/x26"/>

        <LinearLayout
            android:layout_marginTop="@dimen/x35"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x150"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/share_weixin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/x80"
                    android:src="@drawable/weixin"/>
                <TextView
                    android:layout_marginBottom="@dimen/x25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/x22"
                    android:textColor="@color/gray_999999"
                    android:text="微信好友"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_circle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/x80"
                    android:src="@drawable/weixin_circle"/>
                <TextView
                    android:layout_marginBottom="@dimen/x25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/x22"
                    android:textColor="@color/gray_999999"
                    android:text="朋友圈"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_weibo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/x80"
                    android:src="@drawable/weibo"/>
                <TextView
                    android:layout_marginBottom="@dimen/x25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/x22"
                    android:textColor="@color/gray_999999"
                    android:text="新浪微博"/>
            </RelativeLayout>

        </LinearLayout>

        <View
            style="@style/style_line_1"/>

        <TextView
            android:id="@+id/dialog_share_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:text="取消"
            android:gravity="center"
            android:textColor="@color/gray_333333"
            android:textSize="@dimen/x30"/>
    </LinearLayout>

</LinearLayout>