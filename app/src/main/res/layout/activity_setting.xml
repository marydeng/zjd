<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_head_back" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/x124"
        android:layout_height="@dimen/x124"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x80"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/version_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x112"
        android:layout_marginTop="@dimen/x24"
        android:text="@string/version_num"
        android:layout_gravity="center_horizontal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x20"
        android:background="@color/gray_f0f0f0" />

    <RelativeLayout
        android:id="@+id/check_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/setting_menu_padding"
            android:text="@string/check_update"
            android:textColor="@color/gray_494949"
            android:textSize="@dimen/x28" />

        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_menu_padding"
            android:src="@drawable/arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clear_cache"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/setting_menu_padding"
            android:text="@string/clear_cache"
            android:textColor="@color/gray_494949"
            android:textSize="@dimen/x28"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/setting_menu_padding"
            android:src="@drawable/arrow_right"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/account_safe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/setting_menu_padding"
            android:textSize="@dimen/x28"
            android:textColor="@color/gray_494949"
            android:text="@string/account_safe"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/setting_menu_padding"
            android:src="@drawable/arrow_right"
            android:layout_centerVertical="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x20"
        android:background="@color/gray_f0f0f0" />

    <TextView
        android:id="@+id/exit"
        android:layout_width="@dimen/login_edit_view_width"
        android:layout_height="@dimen/x80"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x70"
        android:background="@drawable/selector_red_button"
        android:gravity="center"
        android:text="@string/exit"
        android:textColor="@color/white_ffffff" />
</LinearLayout>