<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150"
        android:background="@color/gray_f0f0f0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x15"
            android:gravity="center_vertical">

            <View
                android:layout_width="@dimen/x90"
                android:layout_height="1px"
                android:background="@color/gray_cccccc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:text="@string/recharge_notice"
                android:textColor="@color/gray_929292"

                android:textSize="@dimen/x28" />

            <View
                android:layout_width="@dimen/x90"
                android:layout_height="1px"
                android:background="@color/gray_cccccc" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x15"
            android:text="@string/recharge_notice_one"
            android:textColor="@color/gray_a0a0a0"
            android:textSize="@dimen/x23" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:text="@string/recharge_notice_two"
            android:textColor="@color/gray_a0a0a0"
            android:textSize="@dimen/x23" />
    </LinearLayout>