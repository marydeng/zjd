<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/address_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x135"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60">

            <TextView
                android:id="@+id/location_userName"
                style="@style/style_default_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x30"
                android:text="张三" />

            <TextView
                android:id="@+id/location_userPhone"
                style="@style/style_default_text"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x40"
                android:text="159123456789" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
           >
            <TextView
                android:id="@+id/location_address"
                style="@style/style_default_text"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x80"
                android:text="" />
            <TextView
                android:id="@+id/location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:background="@drawable/shape_red_line"
                android:paddingLeft="@dimen/x5"
                android:paddingRight="@dimen/x5"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/x20" />
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>