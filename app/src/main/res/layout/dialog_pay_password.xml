<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white_ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30">

        <TextView
            android:id="@+id/cancel_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
            android:text="@string/cancel"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/x26" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/input_pay_pwd"
            android:textColor="@color/gray_333333"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/complete_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
            android:text="@string/complete"
            android:textColor="@color/red_e51728"
            android:textSize="@dimen/x26" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/line" />

    <poll.com.zjd.view.PasswordView
        android:id="@+id/password_view"
        android:layout_width="@dimen/x600"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/x118"
        android:layout_marginTop="@dimen/x118"
        />
</LinearLayout>