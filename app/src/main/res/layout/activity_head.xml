<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/theme_color">

        <LinearLayout
            android:id="@+id/home_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/hear_search"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/express_mode_image"
                android:layout_width="@dimen/x126"
                android:layout_height="@dimen/x42"
                android:layout_gravity="bottom"
                android:src="@drawable/one_two_hours"
                />

            <TextView
                android:id="@+id/home_location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/x20"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="@dimen/x140"
                android:text=""
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/x28"
                android:includeFontPadding="false"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginLeft="@dimen/x30"
                android:src="@drawable/one_arrows_down" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/hear_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30">

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="@dimen/x35"
                android:layout_height="@dimen/x35"
                android:src="@drawable/one_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_icon"
                android:text="搜索"
                android:textColor="@color/gray_999999"
                android:layout_marginTop="@dimen/x4"
                android:textSize="@dimen/x20" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
