<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x540"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_white_solid"
    android:orientation="vertical"
    android:padding="0dp" >

    <TextView
        android:id="@+id/tv_dlg_tip"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/gray_333333"
        android:textSize="@dimen/x28" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_dlg_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_bottom_bg"
            android:gravity="center"
            android:text=""
            android:textColor="@color/gray_333333"
            android:textSize="@dimen/x30" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray" >
        </View>

        <TextView
            android:id="@+id/tv_dlg_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_bottom_bg"
            android:gravity="center"
            android:text=""
            android:textColor="@color/gray_333333"
            android:textSize="@dimen/x30" />
    </LinearLayout>

</LinearLayout>